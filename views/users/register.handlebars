<div class="row">
  <div class="col-md-6 mx-auto">
    <div class="card card-body">
      <img class="logo" src="/img/logo.png">
      <h3 class="text-center">Account Registration</h3>
      <form method="post" action="/users/register">
        <div class="form-group">
          <label for="name">Name</label>
          <input name="name" type="text" class="form-control" value="{{name}}" required></label>
        </div>   
        <div class="form-group">
          <label for="email">Email</label>
          <input name="email" type="email" class="form-control" value="{{email}}" required></label>
        </div>        
        <div class="form-group">
          <label for="password">Password</label>
          <input name="password" type="password" class="form-control" value="{{password}}" required></label>
        </div>
        <div class="form-group">
          <label for="password2">Confirm Password</label>
          <input name="password2" type="password" class="form-control" value="{{password2}}" required></label>
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
      </form>
    </div>
  </div>
</div>